<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con número de entrada y tipo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_numero_entrada"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ENT-001"
                android:textColor="@color/lavanda_suave"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_tipo_entrada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMPRA"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/verde_salvia"
                android:textColor="@color/white"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- Información principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tv_fecha_entrada"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15/12/2024 14:30"
                android:textColor="@color/gris_oscuro"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_estatus_entrada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VALIDADO"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/verde_salvia" />

        </LinearLayout>

        <!-- Perfume y cantidad -->
        <TextView
            android:id="@+id/tv_perfume_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perfume Elegante Dior"
            android:textColor="@color/gris_oscuro"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tv_cantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad: 15"
            android:textColor="@color/gris_oscuro"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <!-- Proveedor -->
        <TextView
            android:id="@+id/tv_proveedor_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proveedor XYZ S.A. de C.V."
            android:textColor="@color/gris_oscuro"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <!-- Información adicional (Orden/Traspaso) -->
        <TextView
            android:id="@+id/tv_informacion_adicional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orden: ORD-001 • Estado: Completada • Total: $450.00"
            android:textColor="@color/oro_palido"
            android:textSize="11sp"
            android:textStyle="italic"
            android:layout_marginBottom="4dp" />

        <!-- Observaciones (opcional) -->
        <TextView
            android:id="@+id/tv_observaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 Observaciones: Todo en orden"
            android:textColor="@color/gris_oscuro"
            android:textSize="11sp"
            android:textStyle="italic"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
