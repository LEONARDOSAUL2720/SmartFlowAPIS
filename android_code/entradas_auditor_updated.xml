<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="35dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gris_perla_claro"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Encabezado -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auditoría de Entradas"
                android:textColor="@color/lavanda_suave"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <!-- Sección de Búsqueda -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="2dp"
                android:clipToPadding="false"
                android:backgroundTint="@color/white"
                android:radius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buscar Entrada Específica"
                    android:textColor="@color/lavanda_suave"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Número de entrada (Compra o Traspaso)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_numero_entrada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_buscar_entrada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buscar Entrada"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="@color/lavanda_suave"
                    android:elevation="2dp"
                    android:padding="12dp"/>
            </LinearLayout>

            <!-- NUEVA SECCIÓN: Lista de Entradas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="2dp"
                android:clipToPadding="false"
                android:backgroundTint="@color/white"
                android:radius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📋 Lista de Entradas"
                    android:textColor="@color/lavanda_suave"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp"/>

                <!-- Filtros para la lista -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Spinner
                        android:id="@+id/spinner_filtro_tipo"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@color/gris_perla_claro"
                        android:padding="8dp"/>

                    <Spinner
                        android:id="@+id/spinner_filtro_estatus_lista"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@color/gris_perla_claro"
                        android:padding="8dp"/>

                </LinearLayout>

                <!-- Botones de control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btn_cargar_entradas"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="🔄 Actualizar"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:backgroundTint="@color/verde_salvia"
                        android:elevation="2dp"
                        android:padding="8dp"/>

                    <Button
                        android:id="@+id/btn_limpiar_filtros_lista"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="🗑️ Limpiar"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:backgroundTint="@color/rojo_vino_tenue"
                        android:elevation="2dp"
                        android:padding="8dp"/>

                </LinearLayout>

                <!-- Información de resultados -->
                <TextView
                    android:id="@+id/tv_info_entradas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📊 Cargando entradas..."
                    android:textColor="@color/verde_salvia"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:background="@color/gris_perla_claro"
                    android:padding="8dp"
                    android:radius="8dp"/>

                <!-- ProgressBar para lista -->
                <ProgressBar
                    android:id="@+id/progress_bar_lista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <!-- RecyclerView para mostrar las entradas -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_entradas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:nestedScrollingEnabled="false"
                    android:maxHeight="400dp"/>

                <!-- Controles de paginación -->
                <LinearLayout
                    android:id="@+id/layout_paginacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btn_pagina_anterior"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="◀ Anterior"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/lavanda_suave"
                        android:layout_marginEnd="16dp"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/tv_pagina_actual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Página 1 de 1"
                        android:textColor="@color/gris_oscuro"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginHorizontal="16dp"/>

                    <Button
                        android:id="@+id/btn_pagina_siguiente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Siguiente ▶"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/lavanda_suave"
                        android:layout_marginStart="16dp"
                        android:padding="8dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Contenedor de Detalles (inicialmente oculto) - MANTENEMOS TODA LA ESTRUCTURA EXISTENTE -->
            <LinearLayout
                android:id="@+id/container_detalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Tarjeta Entrada (Actualizada para mostrar tipo) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:elevation="2dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginHorizontal="2dp"
                    android:clipToPadding="false"
                    android:backgroundTint="@color/white"
                    android:radius="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información de Entrada"
                        android:textColor="@color/lavanda_suave"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_numero_entrada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N° Entrada: "
                        android:textColor="@color/gris_oscuro"
                        android:textStyle="bold"/>

                    <!-- NUEVO: Mostrar tipo de entrada -->
                    <TextView
                        android:id="@+id/tv_tipo_entrada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo: "
                        android:textColor="@color/lavanda_suave"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tv_cantidad_entrada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cantidad: "
                        android:textColor="@color/gris_oscuro"/>

                    <TextView
                        android:id="@+id/tv_proveedor_entrada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proveedor: "
                        android:textColor="@color/gris_oscuro"/>

                    <TextView
                        android:id="@+id/tv_fecha_entrada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha entrada: "
                        android:textColor="@color/gris_oscuro"/>

                    <!-- NUEVO: Campo para referencia de traspaso (inicialmente oculto) -->
                    <TextView
                        android:id="@+id/tv_referencia_traspaso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Referencia: No disponible"
                        android:textColor="@color/gris_oscuro"
                        android:textStyle="italic"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_estatus_entrada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estatus: "
                        android:textColor="@color/verde_salvia"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- ACTUALIZADO: Contenedor de botones de acción -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp">

                    <!-- Botón para validar entrada -->
                    <Button
                        android:id="@+id/btn_validar_entrada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Validar Entrada"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:backgroundTint="@color/lavanda_suave"
                        android:layout_marginBottom="8dp"
                        android:elevation="2dp"
                        android:padding="12dp"/>

                    <!-- NUEVO: Botón para rechazar entrada -->
                    <Button
                        android:id="@+id/btn_rechazar_entrada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="❌ Rechazar Entrada"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:elevation="2dp"
                        android:padding="12dp"
                        android:enabled="false"
                        android:visibility="gone"/>
                </LinearLayout>

                <!-- Tarjeta de Validaciones ACTUALIZADA -->
                <LinearLayout
                    android:id="@+id/card_validaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:elevation="2dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="2dp"
                    android:clipToPadding="false"
                    android:backgroundTint="@color/white"
                    android:radius="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📊 Resumen Ejecutivo de Validación"
                        android:textColor="@color/lavanda_suave"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="12dp"/>

                    <!-- RESUMEN EJECUTIVO -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/gris_perla_claro"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"
                        android:radius="8dp">

                        <TextView
                            android:id="@+id/tv_estado_validacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado: "
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tv_mensaje_principal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mensaje: "
                            android:textColor="@color/gris_oscuro"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tv_accion_recomendada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Acción: "
                            android:textColor="@color/gris_oscuro"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tv_siguiente_paso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Siguiente paso: "
                            android:textColor="@color/gris_oscuro"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tv_tiempo_resolucion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiempo estimado: "
                            android:textColor="@color/gris_oscuro"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <!-- MÉTRICAS -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tv_porcentaje_cumplimiento"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cumplimiento: "
                            android:textColor="@color/gris_oscuro"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tv_nivel_riesgo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Riesgo: "
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- VALIDACIONES INDIVIDUALES (Los textos cambiarán dinámicamente) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔍 Validaciones Individuales"
                        android:textColor="@color/lavanda_suave"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"/>

                    <!-- MODIFICADO: Nombres genéricos que cambiarán según el tipo -->
                    <TextView
                        android:id="@+id/tv_proveedor_validacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Validación 1: "
                        android:textColor="@color/gris_oscuro"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_cantidad_validacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cantidad: "
                        android:textColor="@color/gris_oscuro"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_fecha_validacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fechas: "
                        android:textColor="@color/gris_oscuro"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_precio_validacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Validación 4: "
                        android:textColor="@color/gris_oscuro"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_estado_orden_validacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estado: "
                        android:textColor="@color/gris_oscuro"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- DISCREPANCIAS Y OBSERVACIONES -->
                    <LinearLayout
                        android:id="@+id/layout_discrepancias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📋 Detalles de Validación"
                            android:textColor="@color/lavanda_suave"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="8dp"/>

                        <!-- Discrepancias Críticas -->
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="120dp"
                            android:layout_marginBottom="8dp">

                            <LinearLayout
                                android:id="@+id/container_discrepancias_criticas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"/>
                        </ScrollView>

                        <!-- Discrepancias Importantes -->
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="120dp"
                            android:layout_marginBottom="8dp">

                            <LinearLayout
                                android:id="@+id/container_discrepancias_importantes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"/>
                        </ScrollView>

                        <!-- Advertencias -->
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="100dp"
                            android:layout_marginBottom="8dp">

                            <LinearLayout
                                android:id="@+id/container_advertencias"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"/>
                        </ScrollView>

                        <!-- Recomendaciones -->
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="100dp">

                            <LinearLayout
                                android:id="@+id/container_recomendaciones"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"/>
                        </ScrollView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <!-- Fin del contenedor de detalles -->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
