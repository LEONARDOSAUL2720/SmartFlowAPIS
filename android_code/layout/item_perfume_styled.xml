<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con nombre y estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Nombre del perfume -->
            <TextView
                android:id="@+id/tv_nombre_perfume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre del Perfume"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/gris_oscuro"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- Estado del perfume -->
            <TextView
                android:id="@+id/tv_estado_perfume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activo"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/estado_background"
                android:padding="6dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- InformaciÃ³n principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- Marca -->
            <TextView
                android:id="@+id/tv_marca_perfume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ·ï¸ Marca: "
                android:textSize="14sp"
                android:textColor="@color/gris_oscuro"
                android:layout_marginBottom="4dp"
                android:drawablePadding="6dp"/>

            <!-- CategorÃ­a -->
            <TextView
                android:id="@+id/tv_categoria_perfume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“‚ CategorÃ­a: "
                android:textSize="14sp"
                android:textColor="@color/gris_oscuro"
                android:layout_marginBottom="4dp"
                android:drawablePadding="6dp"/>

            <!-- CÃ³digo del producto -->
            <TextView
                android:id="@+id/tv_codigo_perfume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”¢ CÃ³digo: "
                android:textSize="14sp"
                android:textColor="@color/gris_oscuro"
                android:drawablePadding="6dp"/>
        </LinearLayout>

        <!-- Separador visual -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lavanda_suave"
            android:layout_marginVertical="8dp"
            android:alpha="0.3"/>

        <!-- Layout horizontal para Stock y Precio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Stock con icono -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/stock_background"
                android:padding="8dp"
                android:layout_marginEnd="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¦ STOCK"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/gris_oscuro"/>

                <TextView
                    android:id="@+id/tv_stock_perfume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock: "
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/verde_salvia"/>
            </LinearLayout>

            <!-- Precio con icono -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/precio_background"
                android:padding="8dp"
                android:layout_marginStart="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° PRECIO"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/gris_oscuro"/>

                <TextView
                    android:id="@+id/tv_precio_perfume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio: "
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/oro_palido"/>
            </LinearLayout>
        </LinearLayout>

        <!-- AlmacÃ©n -->
        <TextView
            android:id="@+id/tv_almacen_perfume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸª AlmacÃ©n: "
            android:textSize="12sp"
            android:textColor="@color/gris_oscuro"
            android:background="@color/gris_perla_claro"
            android:padding="8dp"
            android:drawablePadding="6dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
