<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="35dp"
    android:background="@color/gris_perla_claro">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white">

            <!-- Encabezado -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AuditorÃ­a de Entradas"
                android:textColor="@color/lavanda_suave"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <!-- SecciÃ³n de BÃºsqueda -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="2dp"
                android:clipToPadding="false"
                android:backgroundTint="@color/white"
                android:radius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buscar Entrada EspecÃ­fica"
                    android:textColor="@color/lavanda_suave"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="NÃºmero de entrada (Compra o Traspaso)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_numero_entrada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_buscar_entrada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buscar Entrada"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="@color/lavanda_suave"
                    android:elevation="2dp"
                    android:padding="12dp"/>
            </LinearLayout>

            <!-- Filtros para la lista de entradas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="2dp"
                android:clipToPadding="false"
                android:backgroundTint="@color/white"
                android:radius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filtros para Lista de Entradas"
                    android:textColor="@color/lavanda_suave"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <!-- Filtros en una fila -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Spinner
                        android:id="@+id/spinner_filtro_tipo"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp" />

                    <Spinner
                        android:id="@+id/spinner_filtro_estatus_lista"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- Botones de acciÃ³n -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_cargar_entradas"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="Cargar Lista"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:backgroundTint="@color/verde_salvia"
                        android:elevation="2dp"
                        android:padding="8dp"/>

                    <Button
                        android:id="@+id/btn_limpiar_filtros_lista"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="Limpiar"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:backgroundTint="@color/oro_palido"
                        android:elevation="2dp"
                        android:padding="8dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal con scroll behavior -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Contenedor de Detalles de bÃºsqueda especÃ­fica (inicialmente oculto) -->
            <LinearLayout
                android:id="@+id/container_detalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Todo el contenido existente de detalles de entrada va aquÃ­ -->
                <!-- Tarjeta Entrada (Actualizada para mostrar tipo) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:elevation="2dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginHorizontal="2dp"
                    android:clipToPadding="false"
                    android:backgroundTint="@color/white"
                    android:radius="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="InformaciÃ³n de Entrada"
                        android:textColor="@color/lavanda_suave"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_numero_entrada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NÂ° Entrada: "
                        android:textColor="@color/gris_oscuro"
                        android:textStyle="bold"/>

                    <!-- NUEVO: Mostrar tipo de entrada -->
                    <TextView
                        android:id="@+id/tv_tipo_entrada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo: "
                        android:textColor="@color/lavanda_suave"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tv_cantidad_entrada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cantidad: "
                        android:textColor="@color/gris_oscuro"/>

                    <TextView
                        android:id="@+id/tv_proveedor_entrada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proveedor: "
                        android:textColor="@color/gris_oscuro"/>

                    <TextView
                        android:id="@+id/tv_fecha_entrada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha entrada: "
                        android:textColor="@color/gris_oscuro"/>

                    <!-- NUEVO: Campo para referencia de traspaso (inicialmente oculto) -->
                    <TextView
                        android:id="@+id/tv_referencia_traspaso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Referencia: No disponible"
                        android:textColor="@color/gris_oscuro"
                        android:textStyle="italic"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_estatus_entrada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estatus: "
                        android:textColor="@color/verde_salvia"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Se incluirÃ­an aquÃ­ todas las demÃ¡s tarjetas existentes... -->
                <!-- Por brevedad, solo muestro la estructura bÃ¡sica -->

                <!-- BotÃ³n validar -->
                <Button
                    android:id="@+id/btn_validar_entrada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Validar Entrada"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="@color/lavanda_suave"
                    android:layout_marginBottom="8dp"
                    android:elevation="2dp"
                    android:padding="12dp"/>

                <!-- BotÃ³n rechazar -->
                <Button
                    android:id="@+id/btn_rechazar_entrada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âŒ Rechazar Entrada"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:elevation="2dp"
                    android:padding="12dp"
                    android:enabled="false"
                    android:visibility="gone"/>

                <!-- Card de validaciones (oculto inicialmente) -->
                <LinearLayout
                    android:id="@+id/card_validaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <!-- Contenido de validaciones... -->
                </LinearLayout>

            </LinearLayout>

            <!-- SecciÃ³n de Lista de Entradas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="2dp"
                android:clipToPadding="false"
                android:backgroundTint="@color/white"
                android:radius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ Lista de Entradas"
                    android:textColor="@color/lavanda_suave"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"/>

                <!-- InformaciÃ³n de resultados -->
                <TextView
                    android:id="@+id/tv_info_entradas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargar entradas para ver la lista"
                    android:textColor="@color/gris_oscuro"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <!-- ProgressBar para carga -->
                <ProgressBar
                    android:id="@+id/progress_bar_lista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp"/>

                <!-- RecyclerView para la lista -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_entradas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginBottom="16dp"/>

                <!-- Botones de paginaciÃ³n -->
                <LinearLayout
                    android:id="@+id/layout_paginacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btn_pagina_anterior"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â† Anterior"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/gris_oscuro"
                        android:layout_marginEnd="8dp"
                        android:enabled="false"/>

                    <TextView
                        android:id="@+id/tv_pagina_actual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PÃ¡gina 1 de 1"
                        android:textColor="@color/gris_oscuro"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="16dp"
                        android:gravity="center"/>

                    <Button
                        android:id="@+id/btn_pagina_siguiente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Siguiente â†’"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/gris_oscuro"
                        android:layout_marginStart="8dp"
                        android:enabled="false"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
